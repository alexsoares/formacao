<div id="conteudo1">
   <fieldset>
   <legend><font size=6>Curso</font></legend>
    <table border="2">
      <td>
     <p>
       <b>Nome:</b>
         <%=h @curso.nome %>
     </p>
      <p>
        <b>Ministrante:</b>
          <%=h @curso.ministrante %>
      </p>
     <p>
        <b>Tipo</b>
          <%=h @curso.tipo %>
      </p>

      <p>
        <b>Carga Horaria:</b>
          <%=h @curso.carga_horaria.strftime("%H:%M") %>horas
      </p>
      <p>
        <b>Data e Horário:</b>
          <%=h @curso.data_hora.strftime("%d de %B de %Y - %H:%M horas") %>
      </p>
      <p>
        <b>Observações:</b>
          <%=h @curso.obs %>
      </p>
     </td>
   </table>
   
 </fieldset>
   <table>
     <td><%= button_to 'Voltar', voltar_path %></td>
     <td><%= button_to('Editar', {:action => "edit", :id => @curso}, :method => "get") %></td>
     <td> <%= button_to 'Novo curso', new_curso_path %></td>
   </table>
</div>